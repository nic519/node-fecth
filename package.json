{
	"name": "node-fetch",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"convert-vars": "tsx scripts/convert-vars.ts",
		"deploy": "bun run build:frontend && wrangler deploy",
		"dev:backend": "wrangler dev --port 8787",
		"dev:frontend": "cd frontend && bun run dev",
		"dev": "concurrently  \"bun run db:path\" \"bun run dev:backend\" \"bun run dev:frontend\"",
		"build:frontend": "cd frontend && bun run build",
		"build:cf-type": "wrangler types",
		"build:api": "tsx scripts/generate-api-client.ts",
		"type-check": "tsc --noEmit && cd frontend && tsc --noEmit",
		"preview": "bun run build:frontend && wrangler dev --local",
		"test-traffic-utils": "tsx tests/traffic-utils.test.ts",
		"db:generate": "drizzle-kit generate",
		"db:push:local": "drizzle-kit push",
		"db:path": "find .wrangler -path '*d1*' -name '*.sqlite' -type f -exec stat -f '%m %N' {} + 2>/dev/null | sort -rn | head -1 | cut -d' ' -f2- || find .wrangler -path '*d1*' -name '*.sqlite' -type f | head -1",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.3",
		"@types/pino": "^7.0.4",
		"better-sqlite3": "^12.4.5",
		"concurrently": "^9.2.0",
		"drizzle-kit": "^0.31.7",
		"fs-extra": "^11.3.0",
		"oazapfts": "^6.3.0",
		"tsx": "^4.20.3",
		"typescript": "^5.5.2",
		"wrangler": "^4.16.0"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^0.18.3",
		"@iarna/toml": "^2.2.5",
		"@oazapfts/runtime": "^1.0.4",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.8.0",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"yaml": "^2.7.0",
		"zod": "^3.25.67"
	}
}
