{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"./*",
				"../../src/*"
			],
			"@/components/*": [
				"./components/*"
			],
			"@/pages/*": [
				"./pages/*"
			],
			"@/utils/*": [
				"./utils/*"
			],
			"@/types/*": [
				"./types/*",
				"../../src/types/*"
			],
			"@/api/*": [
				"./api/*"
			],
			"@/hooks/*": [
				"./hooks/*"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}